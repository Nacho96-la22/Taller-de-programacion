programa ejercicio2
procesos
  proceso juntarPapeles (ES papel:numero)
  comenzar
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      papel:= papel+1
  fin
  proceso pregunta
  comenzar
    si (PosAv=10)&(PosCa=30)
      derecha
    sino
      si (PosAv=30)&(PosCa=30)
        repetir 2
          derecha
      sino
        si (PosAv=30)&(PosCa=10)
          repetir 3
            derecha
  fin
  proceso recorrer(ES p:numero)
  comenzar
    repetir 19
      juntarPapeles(p)
      mover
    juntarPapeles(p)
  fin
areas
  c1:AreaC(10,10,30,30)
robots
  robot tipo1
  variables 
    p:numero
  comenzar
    pregunta
    recorrer(p)
    Informar(p)
  fin
variables
  robot1:tipo1
  robot2:tipo1
  robot3:tipo1
  robot4:tipo1
comenzar
  AsignarArea(robot1, c1)
  AsignarArea(robot2, c1)
  AsignarArea(robot3, c1)
  AsignarArea(robot4, c1)
  Iniciar(robot1,10,10)
  Iniciar(robot2,10,30)
  Iniciar(robot3,30, 30)
  Iniciar(robot4,30, 10)
fin